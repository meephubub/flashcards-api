# Flashcards API Environment Configuration
# Copy this file to .env and modify the values as needed

# API Configuration
G4F_API_KEY=your-api-key-here
G4F_MODEL=gpt-4o
G4F_PROVIDER=openai
G4F_MEDIA_PROVIDER=openai
G4F_PROXY=

# Server Configuration
DEBUG=false
GUI=false
DEMO=false
TIMEOUT=600
IGNORE_COOKIES=false
IGNORED_PROVIDERS=

# Optional: Redis Configuration (if using cache profile)
REDIS_URL=redis://redis:6379

# Optional: Database Configuration (if needed)
# DATABASE_URL=postgresql://user:password@db:5432/flashcards

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Optional: Security Configuration
CORS_ORIGINS=*
ALLOWED_HOSTS=localhost,127.0.0.1

# Optional: Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Optional: SSL/TLS Configuration (if using proxy profile)
SSL_CERT_FILE=/etc/nginx/ssl/cert.pem
SSL_KEY_FILE=/etc/nginx/ssl/key.pem 